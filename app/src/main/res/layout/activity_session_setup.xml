<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_header"
            style="@style/HeadlineText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Setup Treasure Hunt"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/SubheadText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Configure your session and start collecting treasures!"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_header" />

        <!-- Permission Check Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_permission_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Permissions"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_permission_status"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Checking permissions..."
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_open_settings"
                    style="@style/SecondaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="Open Settings"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- GPS Check Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_gps_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_permission_check">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. GPS Status"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gps_status"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Checking GPS..."
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_enable_gps"
                    style="@style/SecondaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="Enable GPS"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Battery Check Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_battery_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_gps_check">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Battery Optimization"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_battery_status"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Checking battery settings..."
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_battery_settings"
                    style="@style/SecondaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="Battery Settings"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Activity Type Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_activity_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_battery_check">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Activity Type"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/BodyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I want to "
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_activity_type"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Distance Goal Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_distance_goal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_activity_type">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Distance Goal"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_distance_value"
                    style="@style/HeadlineText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="1.0 km"
                    android:textColor="@color/primary_orange"
                    android:textSize="32sp" />

                <!-- Track Visualization -->
                <com.example.caloriechase.views.TrackVisualizationView
                    android:id="@+id/track_visualization"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:progressTint="@color/primary_orange"
                    android:thumbTint="@color/primary_orange" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0.5 km"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/BodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50 km"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/BodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="100 km"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Or enter distance manually:"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_manual_distance"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:hint="Enter distance"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:imeOptions="actionDone" />

                    <TextView
                        style="@style/BodyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="km"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Starting Point Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_starting_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_distance_goal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Starting Point"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/SubheadText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Choose where to begin your treasure hunt"
                    android:textSize="14sp" />

                <!-- Selected Starting Point Display -->
                <TextView
                    android:id="@+id/tv_selected_location"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp"
                    android:text="No starting point selected"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_choose_starting_point"
                    style="@style/SecondaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Choose Starting Point"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_location"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- AI Agent Prompt Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ai_prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_starting_point">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. AI Agent Prompt (Optional)"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/SubheadText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ask the AI agent for personalized treasure hunt suggestions"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_ai_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="top|start"
                    android:hint="e.g., Create a treasure hunt with historical landmarks..."
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLength="500"
                    android:padding="12dp"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Start Session Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_session"
            style="@style/PrimaryButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Start Session"
            android:textSize="18sp"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_play"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_ai_prompt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>